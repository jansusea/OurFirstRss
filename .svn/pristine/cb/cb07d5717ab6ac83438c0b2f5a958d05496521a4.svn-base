<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_source_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#69D2E7"
            android:gravity="center_vertical"
            android:paddingLeft="50dp"
            android:text="News"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/ib_source_slidingmenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/ic_view_list_white_24dp" />

        <ImageButton
            android:id="@+id/ib_source_addsource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/ic_playlist_add_white_24dp" />
    </RelativeLayout>

    <ListView
        android:id="@+id/lv_source_titlelist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>

</LinearLayout>