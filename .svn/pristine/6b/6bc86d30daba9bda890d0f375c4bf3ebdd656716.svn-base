<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ll_setting_background"
    android:background="#F4F5F1"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="设置"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/ib_home_slidingmenu"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/setting_back" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/setting_backgrond" >
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_setting_nightmode"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="夜间模式" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_offlinedownload"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="离线下载" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_clearcache"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="清除缓存" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_moresetting"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="更多设置" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="#ceced1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_setting_userfeed"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="用户反馈" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_checkupdate"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:background="@drawable/tv_setting_itemselector"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:text="检查更新" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_goodcomment"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="给我们好评" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="#88ffff55" />

                <TextView
                    android:id="@+id/tv_setting_aboutus"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:focusable="true"
                    android:gravity="center_vertical"
                    android:background="@drawable/tv_setting_itemselector"
                    android:text="关于我们" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>