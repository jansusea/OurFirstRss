<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:item="http://schemas.android.com/apk/res/com.skyrss"
    xmlns:slideswitch="http://schemas.android.com/apk/res/com.skyrss"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_home_title"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="#03A9F4"
            android:gravity="center"
            android:text="更多设置"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />

        <ImageButton
            android:id="@+id/ib_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@null"
            android:src="@drawable/setting_back" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="5dp" >

        <TextView
            android:id="@+id/tv_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="推送设置"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_setting_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_setting_title"
            android:layout_marginLeft="5dp"
            android:text="推送已经开启"
            android:textColor="#99000000"
            android:textSize="14sp" />

        <com.skyrss.ui.SlideSwitch
            android:id="@+id/ss_moresetting_test"
            android:layout_width="65dp"
            android:layout_height="30dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            slideswitch:isOpen="true"
            slideswitch:shape="rect"
            slideswitch:themeColor="#6495ed" >
        </com.skyrss.ui.SlideSwitch>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#99000000" />
    </RelativeLayout>

</LinearLayout>