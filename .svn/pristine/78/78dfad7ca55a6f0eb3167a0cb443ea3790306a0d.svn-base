<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/iv_newstitlelist_img"
        android:layout_width="130dp"
        android:layout_height="110dp" 
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="110dp" >

        <TextView
            android:id="@+id/tv_newstitlelist_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp" />

        <TextView
            android:id="@+id/tv_newstitlelist_creator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_newstitlelist_title"
            android:layout_below="@id/tv_newstitlelist_title"
            android:layout_centerVertical="true"
            android:layout_gravity="right"
            android:textSize="14sp"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:textColor="#88000000" />
    </RelativeLayout>

</LinearLayout>